category:            Database
build-type:          Simple
cabal-version:       >=1.10

library
  exposed-modules:     Database.Persist.Postgresql.Json
  default-language:    Haskell2010
  build-depends:       base                 >=4.7
                     , aeson
                     , mtl
                     , transformers
                     , bytestring           >=0.10

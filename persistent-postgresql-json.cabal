  ghc-options:        -Wall
  default-language:   Haskell2010
  build-depends:
                base                   == 4.*
              , hspec
              , HUnit
              , aeson
              , resourcet
              , persistent             >= 2.1
              , persistent-template    >= 2.1
              , persistent-postgresql  >= 2.1
              , text                   >= 1.2
              , monad-logger
              , fast-logger
              , transformers
              , persistent-jsonb
